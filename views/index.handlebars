<h1>Eat-Da-Burger!</h1>
<table>
	<tr>
		<td>
			<ul>
			{{#each burgers}}
			{{#unless devoured}}
				{{> burger-block}}
			{{/unless}}
			{{/each}}
			</ul>
		</td>
		<td>
			<ul>
			{{#each burgers}}
			{{#if devoured}}
				{{> burger-block}}
			{{/if}}
			{{/each}}
			</ul>
		</td>
	</tr>
</table>

<form>
	<div>
		<input type="text" name="name" value="" />
	</div>

	<button type="submit">Submit</button>
	<h3>Enter a burger you want to eat and submit!</h3>
</form>
